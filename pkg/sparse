[build]
cat <<EOF > local.mk
PREFIX = $butch_prefix
CFLAGS += -D_GNU_SOURCE $optcflags
EOF
LDFLAGS="-static $optldflags" make -j$MAKE_THREADS V=1 HAVE_GTK2=no || exit 1
make DESTDIR="$butch_install_dir" install || exit 1
