[main]
filesize=1773882
sha512=a1ecf6fe9f3ddacfe43006cfc388d9324c457be91767792119d8a112b190739e3274dfeb7cffd28534b86a33f86079c569d8337eeddaa9d60ed69f82d8a4627f

[deps]
python
python-pygtk
libvirt
python-virtinst

[build]
patch -p1 < "$K"/virt-manager-no-dbus.patch || exit 1

CFLAGS="-D_GNU_SOURCE $optcflags" LDFLAGS="$optldflags" \
  ./configure -C --prefix="$butch_prefix" || exit 1

make -j$MAKE_THREADS || exit 1
make DESTDIR="$butch_install_dir" install || exit 1

exit 1 # virt-manager depends on gconf, this needs to be fixed

cat << EOF > /dev/null
# these funcs need to be implemented in a pseudo-gconf python module
# which just writes to a config file:
conf.add_dir
conf.all_dirs
conf.count
conf.get
conf.get_bool
conf.get_int
conf.get_list
conf.get_string
conf.get_value
conf.notify_add
conf.notify_remove
conf.recursive_unset
conf.set_bool
conf.set_int
conf.set_list
conf.set_string
conf.suggest_sync
conf.unset
gconf.VALUE_STRING
gconf.client_get_default
gconf.escape_key
EOF
