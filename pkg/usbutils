[build]
CFLAGS="$optcflags" \
LDFLAGS="$optldflags" \
  ./configure --prefix="$butch_prefix" --sbindir="$butch_prefix"/bin
make -j$MAKE_THREADS || exit 1
make DESTDIR="$butch_install_dir" install || exit 1
