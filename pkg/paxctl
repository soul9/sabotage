[build]
sed -i 's@/sbin@$(bindir)/@g' Makefile
sed -i 's@ --owner 0 --group 0@@g' Makefile
make LDFLAGS=-static -j$MAKE_THREADS CC="$CC"
make DESTDIR="$butch_install_dir" bindir="$butch_prefix"/bin MANDIR="$butch_prefix"/share/man/man1 install
